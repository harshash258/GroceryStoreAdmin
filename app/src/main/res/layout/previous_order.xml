<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:padding="10dp"
    app:cardElevation="20dp"
    card_view:cardCornerRadius="10dp">

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:padding="10dp">

        <TextView
            android:id="@+id/orderId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Order Id:"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/order_UserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/orderId"
            android:padding="5dp"
            android:text="Username"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/order_totalPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/orderId"
            android:layout_toEndOf="@+id/order_UserName"
            android:gravity="right"
            android:padding="5dp"
            android:text="Total:"
            android:textColor="#000"
            android:textSize="18sp" />



        <Button
            android:id="@+id/orderDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_totalPrice"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:background="@android:color/black"
            android:padding="5dp"
            android:text="View Order Details"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/orderDetails"
            android:layout_marginStart="-10dp"
            android:layout_marginEnd="-10dp"
            android:background="#000" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>